<section>
    <aside></aside>
    <div class="content">
        <div class="form-group">
            <label for="title">What is your title?</label>
            <select id="title" class="control">
                <option disabled selected>Please select...</option>
                {{#each titles}}
                <option>{{this}}</option>
                {{/each}}
            </select>
        </div>
        <div class="form-group">
            <label for="first-name">What is your first name?</label>
            <input id="first-name" class="control" placeholder="Enter your first name"></input>
        </div>
        <div class="form-group">
            <label for="surname">What is your surname?</label>
            <input id="surname" class="control" placeholder="Enter your surname"></input>
        </div>
        <div class="form-group">
            <label for="middle-name">What is your middle name? (optional)</label>
            <input id="middle-name" class="control" placeholder="Enter your middle name if you have one"></input>
        </div>
    </div>
    <aside></aside>
</section>
